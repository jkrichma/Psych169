<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ir_label"
        android:textColor="@color/gray"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft= "50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ir_left"
            android:textColor="@color/gray"
            android:paddingLeft="48dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ir_center"
            android:textColor="@color/gray"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ir_right"
            android:textColor="@color/gray"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft= "50dp">

        <TextView
            android:id="@+id/irLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:paddingLeft="64dp"
            android:text="0.0"
            android:textAllCaps="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/irCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:paddingLeft="48dp"
            android:text="0.0"
            android:textAllCaps="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/irRight"
            android:text="0.0"
            android:textColor="@color/gray"
            android:paddingLeft="32dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft= "50dp"
            android:layout_marginTop="7dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:onClick="onButtonClick"
            android:text="Tricks"
            android:textSize="20sp"/>


        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/command"
            android:text="Listening..."
            android:paddingLeft="103dp"
            android:layout_marginLeft= "50dp"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_below="@+id/button"
            android:textSize="20sp"/>

        <ToggleButton
            android:id="@+id/buttonStartStop"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_below="@id/command"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_marginLeft= "50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textOff="@string/start"
            android:textOn="@string/stop"
            android:textSize="20sp" />

        <ImageView

            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/command"
            android:layout_marginTop="10dp"
            android:paddingBottom="16dp"
            android:src="@drawable/robo">
        </ImageView>



    </RelativeLayout>

</LinearLayout>